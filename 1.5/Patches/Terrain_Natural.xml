<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <!-- Stony Soil  -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Gravel"]</xpath>
        <value>
            <description>Transform stone terrain into fertile stony soil using limestone blocks. Making it ideal for agriculture. A practical solution for expanding your colony's farmland.</description>
            <constructEffect>ConstructDirt</constructEffect>
            <designationCategory>Floors</designationCategory>
            <costList>
                <BlocksLimestone>8</BlocksLimestone>
            </costList>
            <researchPrerequisites>
                <li>Terraforming</li>
            </researchPrerequisites>
            <placeWorkers>
                <li>RimTerra.PlaceWorkers.PlaceWorker_OnStone</li>
            </placeWorkers>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Gravel"]/statBases</xpath>
        <value>
            <WorkToBuild>1600</WorkToBuild>
        </value>
    </Operation>
    <!-- Soil -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Soil"]</xpath>
        <value>
            <description>Convert stony soil into fertile soil using pemmican. Enriches the land, perfect for crop growth. Efficiently upgrade your colony's agriculture with this unique method.</description>
            <constructEffect>ConstructDirt</constructEffect>
            <designationCategory>Floors</designationCategory>
            <costList>
                <Pemmican>32</Pemmican>
            </costList>
            <researchPrerequisites>
                <li>Terraforming</li>
                <li>Pemmican</li>
            </researchPrerequisites>
            <placeWorkers>
                <li>RimTerra.PlaceWorkers.PlaceWorker_OnStonySoil</li>
            </placeWorkers>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Soil"]/statBases</xpath>
        <value>
            <WorkToBuild>1600</WorkToBuild>
        </value>
    </Operation>
    <!-- Rich Soil -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="SoilRich"]</xpath>
        <value>
            <description>Upgrade fertile soil into rich soil using neutroamine. Boosts soil fertility, providing the best conditions for crop growth. A valuable asset for your colony's agriculture.</description>
            <constructEffect>ConstructDirt</constructEffect>
            <designationCategory>Floors</designationCategory>
            <costList>
                <Neutroamine>32</Neutroamine>
            </costList>
            <researchPrerequisites>
                <li>Terraforming</li>
                <li>DrugProduction</li>
            </researchPrerequisites>
            <placeWorkers>
                <li>RimTerra.PlaceWorkers.PlaceWorker_OnSoil</li>
            </placeWorkers>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="SoilRich"]/statBases</xpath>
        <value>
            <WorkToBuild>1600</WorkToBuild>
        </value>
    </Operation>
</Patch>